<%- include('partials/header.ejs') %>
<body>
    <h1>Home</h1>
    <p>
        <%= homeContent %>
    </p>
    
        <% posts.forEach((post)=>{ %>
               <div class="postStyle">
                    <h3><%= post.title %></h3>
                    <p>
                        <!-- truncate text to 100 characters -->
                        <% var shortText = post.content %>
                        <% truncShortText = shortText.substring(0, 150) %>
                        <%= truncShortText %>
                    </p>
                    <a href="post/<%= post.title %>">Read More</a>
               </div>
        <% }) %>
</body>
